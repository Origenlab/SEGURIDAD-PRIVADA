
# php -- BEGIN cPanel-generated handler, do not edit
# This domain inherits the "PHP" package.
# php -- END cPanel-generated handler, do not edit

# =====================================================
# CONFIGURACION SEO Y RENDIMIENTO - ORIGINS PRIVATE SECURITY
# =====================================================

# Activar motor de reescritura
RewriteEngine On

# =====================================================
# REDIRECCIONES HTTPS Y WWW (CANONICALIZACION)
# =====================================================

# Forzar HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Redirigir www a sin www (version canonica)
RewriteCond %{HTTP_HOST} ^www\.seguridad-privada\.com\.mx [NC]
RewriteRule ^(.*)$ https://seguridad-privada.com.mx/$1 [L,R=301]

# Eliminar trailing slash excepto en directorios
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} (.+)/$
RewriteRule ^ %1 [R=301,L]

# =====================================================
# COMPRESION GZIP
# =====================================================

<IfModule mod_deflate.c>
    # Comprimir HTML, CSS, JavaScript, Text, XML y fonts
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE application/ld+json
    AddOutputFilterByType DEFLATE image/svg+xml
    AddOutputFilterByType DEFLATE font/ttf
    AddOutputFilterByType DEFLATE font/otf
    AddOutputFilterByType DEFLATE font/woff
    AddOutputFilterByType DEFLATE font/woff2
</IfModule>

# =====================================================
# CACHE DEL NAVEGADOR (BROWSER CACHING)
# =====================================================

<IfModule mod_expires.c>
    ExpiresActive On

    # Imagenes - 1 mes
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/webp "access plus 1 month"
    ExpiresByType image/avif "access plus 1 month"
    ExpiresByType image/svg+xml "access plus 1 month"
    ExpiresByType image/x-icon "access plus 1 year"
    ExpiresByType image/ico "access plus 1 year"

    # CSS y JavaScript - 1 semana
    ExpiresByType text/css "access plus 1 week"
    ExpiresByType application/javascript "access plus 1 week"
    ExpiresByType text/javascript "access plus 1 week"

    # Fonts - 1 mes
    ExpiresByType font/ttf "access plus 1 month"
    ExpiresByType font/otf "access plus 1 month"
    ExpiresByType font/woff "access plus 1 month"
    ExpiresByType font/woff2 "access plus 1 month"
    ExpiresByType application/font-woff "access plus 1 month"
    ExpiresByType application/font-woff2 "access plus 1 month"

    # HTML - 1 hora (para actualizaciones frecuentes)
    ExpiresByType text/html "access plus 1 hour"

    # JSON y XML - 1 dia
    ExpiresByType application/json "access plus 1 day"
    ExpiresByType application/ld+json "access plus 1 day"
    ExpiresByType application/xml "access plus 1 day"
    ExpiresByType text/xml "access plus 1 day"

    # Default
    ExpiresDefault "access plus 1 week"
</IfModule>

# Cache-Control Headers
<IfModule mod_headers.c>
    # Imagenes - 1 mes
    <FilesMatch "\.(ico|jpe?g|png|gif|webp|avif|svg)$">
        Header set Cache-Control "public, max-age=2592000"
    </FilesMatch>

    # CSS y JS - 1 semana
    <FilesMatch "\.(css|js)$">
        Header set Cache-Control "public, max-age=604800"
    </FilesMatch>

    # Fonts - 1 mes
    <FilesMatch "\.(ttf|otf|woff|woff2|eot)$">
        Header set Cache-Control "public, max-age=2592000"
        Header set Access-Control-Allow-Origin "*"
    </FilesMatch>

    # HTML - no cache agresivo
    <FilesMatch "\.(html|htm)$">
        Header set Cache-Control "public, max-age=3600, must-revalidate"
    </FilesMatch>
</IfModule>

# =====================================================
# SEGURIDAD - HEADERS (OWASP Best Practices)
# =====================================================

<IfModule mod_headers.c>
    # HSTS - Forzar HTTPS por 1 a√±o (incluir subdominios y preload)
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"

    # Proteccion XSS
    Header always set X-XSS-Protection "1; mode=block"

    # Prevenir MIME-type sniffing
    Header always set X-Content-Type-Options "nosniff"

    # Clickjacking protection - DENY es mas seguro que SAMEORIGIN
    Header always set X-Frame-Options "DENY"

    # Referrer Policy - No enviar referrer a sitios externos
    Header always set Referrer-Policy "strict-origin-when-cross-origin"

    # Content Security Policy (CSP) - Whitelist de recursos permitidos
    Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' https://app.rybbit.io https://www.googletagmanager.com https://www.google-analytics.com; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' https://app.rybbit.io https://www.google-analytics.com https://wa.me; frame-ancestors 'none'; form-action 'self' https://wa.me; base-uri 'self'; upgrade-insecure-requests"

    # Permissions Policy - Restringir APIs del navegador
    Header always set Permissions-Policy "geolocation=(), microphone=(), camera=(), accelerometer=(), gyroscope=(), magnetometer=(), usb=(), payment=(), interest-cohort=()"

    # Cross-Origin Policies
    Header always set Cross-Origin-Opener-Policy "same-origin"
    Header always set Cross-Origin-Embedder-Policy "unsafe-none"
    Header always set Cross-Origin-Resource-Policy "same-origin"

    # Prevenir que el sitio sea indexado por robots de IA (opcional)
    # Header always set X-Robots-Tag "noai, noimageai"
</IfModule>

# =====================================================
# TIPOS MIME CORRECTOS
# =====================================================

<IfModule mod_mime.c>
    AddType text/html .html .htm
    AddType text/css .css
    AddType application/javascript .js
    AddType application/json .json
    AddType application/ld+json .jsonld
    AddType image/webp .webp
    AddType image/avif .avif
    AddType image/svg+xml .svg .svgz
    AddType font/woff .woff
    AddType font/woff2 .woff2
    AddType font/ttf .ttf
    AddType font/otf .otf
    AddType application/xml .xml
    AddType text/xml .xml
</IfModule>

# =====================================================
# PAGINA DE ERROR 404 PERSONALIZADA
# =====================================================

ErrorDocument 404 /404.html

# =====================================================
# BLOQUEAR ACCESO A ARCHIVOS SENSIBLES
# =====================================================

# Bloquear acceso a archivos de respaldo y configuracion
<FilesMatch "\.(bak|backup|old|tmp|swp|log|sql|env|ini|config)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Bloquear archivos de sistema
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

# Proteger .htaccess
<Files .htaccess>
    Order allow,deny
    Deny from all
</Files>

# =====================================================
# OPTIMIZACION ADICIONAL
# =====================================================

# ETags - desactivar para mejor rendimiento CDN
<IfModule mod_headers.c>
    Header unset ETag
</IfModule>
FileETag None

# Charset UTF-8 por defecto
AddDefaultCharset UTF-8

# =====================================================
# REDIRECCIONES 301 - URLs ANTIGUAS Y ROTAS
# =====================================================

# Redirigir /noticias/ antiguo a /blog/ o paginas relevantes
# Proteccion VIP/Ejecutiva -> proteccion-ejecutiva
RewriteRule ^noticias/proteccion-dignataria-y-vip-profesionales(.*)$ /proteccion-ejecutiva.html [R=301,L]
RewriteRule ^noticias/proteccion-vip(.*)$ /proteccion-ejecutiva.html [R=301,L]
RewriteRule ^noticias/escoltas(.*)$ /proteccion-ejecutiva.html [R=301,L]

# Guardias de seguridad
RewriteRule ^noticias/(.*)guardias(.*)$ /guardias-de-seguridad-y-vigilancia.html [R=301,L]
RewriteRule ^noticias/(.*)seguridad-privada(.*)$ /guardias-de-seguridad-y-vigilancia.html [R=301,L]
RewriteRule ^noticias/4-razones-inteligentes-para-contratar-gu(.*)$ /guardias-de-seguridad-y-vigilancia.html [R=301,L]
RewriteRule ^noticias/cuanto-cuesta-alquilar-seguridad-privada(.*)$ /blog/costo-seguridad-privada-condominios-cdmx.html [R=301,L]

# Trabajos/empleo
RewriteRule ^noticias/informacion-sobre-trabajos-de-seguridad(.*)$ /bolsa-de-trabajo.html [R=301,L]
RewriteRule ^noticias/(.*)trabajo(.*)$ /bolsa-de-trabajo.html [R=301,L]
RewriteRule ^noticias/(.*)empleo(.*)$ /bolsa-de-trabajo.html [R=301,L]

# Armas/defensa personal -> pagina principal (no tenemos ese contenido)
RewriteRule ^noticias/como-funciona-una-pistola-paralizante(.*)$ / [R=301,L]
RewriteRule ^noticias/los-tres-mejores-aerosoles-de-pimienta(.*)$ / [R=301,L]
RewriteRule ^noticias/(.*)armas(.*)$ / [R=301,L]

# Cualquier otra URL de /noticias/ -> blog
RewriteRule ^noticias/(.*)$ /blog/ [R=301,L]
RewriteRule ^noticias$ /blog/ [R=301,L]

# Redirigir /blog/articulos/ a /blog/ (estructura nueva)
RewriteRule ^blog/articulos/(.*)$ /blog/$1 [R=301,L]

# Redirigir /category/ y /tag/ si existen
RewriteRule ^category/(.*)$ /blog/ [R=301,L]
RewriteRule ^tag/(.*)$ /blog/ [R=301,L]

# Redirigir URLs con .php a .html si alguien las busca
RewriteRule ^([a-z0-9-]+)\.php$ /$1.html [R=301,L]
